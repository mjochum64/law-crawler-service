<?xml version="1.0" encoding="UTF-8" ?>
<!--
 Apache Solr Schema für Rechtsdokumente
 Optimiert für deutsche Rechtsprechung von rechtsprechung-im-internet.de
-->
<schema name="legal-documents" version="1.6">

  <!-- ==================== FIELD TYPES ==================== -->
  
  <!-- Basis-Typen -->
  <fieldType name="string" class="solr.StrField" sortMissingLast="true" />
  <fieldType name="boolean" class="solr.BoolField" sortMissingLast="true"/>
  <fieldType name="int" class="solr.IntPointField" docValues="true"/>
  <fieldType name="long" class="solr.LongPointField" docValues="true"/>
  <fieldType name="float" class="solr.FloatPointField" docValues="true"/>
  <fieldType name="double" class="solr.DoublePointField" docValues="true"/>
  
  <!-- Datum und Zeit -->
  <fieldType name="date" class="solr.DatePointField" docValues="true" />
  
  <!-- Text-Typen für deutsche Rechtsdokumente -->
  <fieldType name="text_general" class="solr.TextField" positionIncrementGap="100">
    <analyzer>
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords.txt" />
      <filter class="solr.LowerCaseFilterFactory"/>
    </analyzer>
  </fieldType>
  
  <!-- Deutscher Text mit Rechtsterminologie -->
  <fieldType name="text_de_legal" class="solr.TextField" positionIncrementGap="100" autoGeneratePhraseQueries="true">
    <analyzer type="index">
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <!-- Deutsche Umlaute und Sonderzeichen normalisieren -->
      <filter class="solr.ASCIIFoldingFilterFactory"/>
      <!-- Deutsche Stoppwörter -->
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="lang/stopwords_de.txt" format="snowball"/>
      <!-- Deutsche Wortzerlegung -->
      <filter class="solr.GermanNormalizationFilterFactory"/>
      <!-- Deutsche Grundform-Reduktion -->
      <filter class="solr.GermanLightStemFilterFactory"/>
      <filter class="solr.LowerCaseFilterFactory"/>
    </analyzer>
    <analyzer type="query">
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.ASCIIFoldingFilterFactory"/>
      <filter class="solr.StopFilterFactory" ignoreCase="true" words="lang/stopwords_de.txt" format="snowball"/>
      <filter class="solr.GermanNormalizationFilterFactory"/>
      <filter class="solr.GermanLightStemFilterFactory"/>
      <filter class="solr.LowerCaseFilterFactory"/>
    </analyzer>
  </fieldType>

  <!-- Text für Aktenzeichen und juristische Referenzen -->
  <fieldType name="text_legal_ref" class="solr.TextField" positionIncrementGap="100">
    <analyzer>
      <tokenizer class="solr.KeywordTokenizerFactory"/>
      <filter class="solr.LowerCaseFilterFactory"/>
      <!-- Juristische Abkürzungen und Referenzen beibehalten -->
      <filter class="solr.PatternReplaceFilterFactory" pattern="([0-9]+)\s+([A-Z]+)\s+([0-9]+\/[0-9]+)" replacement="$1$2$3"/>
    </analyzer>
  </fieldType>
  
  <!-- ECLI Identifier -->
  <fieldType name="ecli_type" class="solr.TextField">
    <analyzer>
      <tokenizer class="solr.KeywordTokenizerFactory"/>
      <filter class="solr.LowerCaseFilterFactory"/>
    </analyzer>
  </fieldType>

  <!-- ==================== FIELDS ==================== -->
  
  <!-- Eindeutige ID (Required) -->
  <field name="id" type="string" indexed="true" stored="true" required="true" multiValued="false" />
  
  <!-- Version (Required für Updates) -->
  <field name="_version_" type="long" indexed="false" stored="false"/>
  
  <!-- === Dokument Basis-Informationen === -->
  <field name="document_id" type="string" indexed="true" stored="true" required="true"/>
  <field name="source_url" type="string" indexed="true" stored="true"/>
  <field name="file_path" type="string" indexed="false" stored="true"/>
  <field name="crawled_at" type="date" indexed="true" stored="true"/>
  <field name="status" type="string" indexed="true" stored="true"/>
  
  <!-- === Rechtsprechungs-Metadaten === -->
  <field name="court" type="string" indexed="true" stored="true" required="true"/>
  <field name="court_full_name" type="text_de_legal" indexed="true" stored="true"/>
  <field name="decision_date" type="date" indexed="true" stored="true"/>
  <field name="case_number" type="text_legal_ref" indexed="true" stored="true"/>
  <field name="ecli_identifier" type="ecli_type" indexed="true" stored="true"/>
  <field name="document_type" type="string" indexed="true" stored="true"/>
  
  <!-- === Dokument-Inhalte === -->
  <field name="title" type="text_de_legal" indexed="true" stored="true"/>
  <field name="summary" type="text_de_legal" indexed="true" stored="true"/>
  <field name="full_text" type="text_de_legal" indexed="true" stored="true"/>
  
  <!-- === Strukturierte Inhalte === -->
  <field name="leitsatz" type="text_de_legal" indexed="true" stored="true" multiValued="true"/>
  <field name="tenor" type="text_de_legal" indexed="true" stored="true"/>
  <field name="gruende" type="text_de_legal" indexed="true" stored="true"/>
  <field name="verfahrensgang" type="text_de_legal" indexed="true" stored="true" multiValued="true"/>
  
  <!-- === Rechtsnormen === -->
  <field name="normen" type="text_legal_ref" indexed="true" stored="true" multiValued="true"/>
  <field name="schlagworte" type="text_de_legal" indexed="true" stored="true" multiValued="true"/>
  
  <!-- === Richter/Senate === -->
  <field name="richter" type="string" indexed="true" stored="true" multiValued="true"/>
  <field name="senat" type="string" indexed="true" stored="true"/>
  
  <!-- === Technische Felder === -->
  <field name="year" type="int" indexed="true" stored="true"/>
  <field name="month" type="int" indexed="true" stored="true"/>
  <field name="indexed_at" type="date" indexed="true" stored="true" default="NOW"/>
  
  <!-- === Search-optimierte Copy-Fields === -->
  <field name="text" type="text_de_legal" indexed="true" stored="false" multiValued="true"/>
  <field name="text_exact" type="text_general" indexed="true" stored="false" multiValued="true"/>
  
  <!-- === Suggest-Fields für Autocomplete === -->
  <field name="suggest" type="text_general" indexed="true" stored="false" multiValued="true"/>
  
  <!-- ==================== DYNAMIC FIELDS ==================== -->
  <dynamicField name="*_s" type="string" indexed="true" stored="true"/>
  <dynamicField name="*_t" type="text_general" indexed="true" stored="true"/>
  <dynamicField name="*_dt" type="date" indexed="true" stored="true"/>
  <dynamicField name="*_i" type="int" indexed="true" stored="true"/>
  <dynamicField name="*_l" type="long" indexed="true" stored="true"/>
  <dynamicField name="*_f" type="float" indexed="true" stored="true"/>
  <dynamicField name="*_d" type="double" indexed="true" stored="true"/>
  <dynamicField name="*_b" type="boolean" indexed="true" stored="true"/>
  
  <!-- ==================== COPY FIELDS ==================== -->
  
  <!-- Haupt-Suchfeld: Alle relevanten Textinhalte -->
  <copyField source="title" dest="text"/>
  <copyField source="summary" dest="text"/>
  <copyField source="full_text" dest="text"/>
  <copyField source="leitsatz" dest="text"/>
  <copyField source="tenor" dest="text"/>
  <copyField source="gruende" dest="text"/>
  <copyField source="verfahrensgang" dest="text"/>
  
  <!-- Exakte Suche -->
  <copyField source="case_number" dest="text_exact"/>
  <copyField source="ecli_identifier" dest="text_exact"/>
  <copyField source="normen" dest="text_exact"/>
  
  <!-- Suggest/Autocomplete -->
  <copyField source="court_full_name" dest="suggest"/>
  <copyField source="title" dest="suggest"/>
  <copyField source="case_number" dest="suggest"/>
  <copyField source="ecli_identifier" dest="suggest"/>
  
  <!-- Jahr aus Entscheidungsdatum extrahieren -->
  <copyField source="decision_date" dest="year"/>
  
</schema>