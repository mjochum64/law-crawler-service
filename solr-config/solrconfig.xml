<?xml version="1.0" encoding="UTF-8" ?>
<!--
 Apache Solr Konfiguration für Rechtsdokumente
 Optimiert für deutsche Rechtsprechung
-->
<config>
  
  <!-- ==================== LUCENE VERSION ==================== -->
  <luceneMatchVersion>9.0</luceneMatchVersion>

  <!-- ==================== DATA DIR ==================== -->
  <dataDir>${solr.data.dir:}</dataDir>

  <!-- ==================== DIRECTORY FACTORY ==================== -->
  <directoryFactory name="DirectoryFactory" 
                    class="${solr.directoryFactory:solr.NRTCachingDirectoryFactory}"/>

  <!-- ==================== CODEC FACTORY ==================== -->
  <codecFactory class="solr.SchemaCodecFactory"/>

  <!-- ==================== INDEX CONFIG ==================== -->
  <indexConfig>
    <ramBufferSizeMB>100</ramBufferSizeMB>
    <maxBufferedDocs>1000</maxBufferedDocs>
    <useCompoundFile>false</useCompoundFile>

    <mergePolicyFactory class="org.apache.solr.index.TieredMergePolicyFactory">
      <int name="maxMergeAtOnce">10</int>
      <int name="segmentsPerTier">10</int>
    </mergePolicyFactory>

    <mergeScheduler class="org.apache.lucene.index.ConcurrentMergeScheduler"/>

    <lockType>${solr.lock.type:native}</lockType>

    <infoStream>true</infoStream>
  </indexConfig>

  <!-- ==================== JMX ==================== -->
  <jmx />

  <!-- ==================== UPDATE HANDLER ==================== -->
  <updateHandler class="solr.DirectUpdateHandler2">
    <updateLog>
      <str name="dir">${solr.ulog.dir:}</str>
      <int name="numVersionBuckets">${solr.ulog.numVersionBuckets:65536}</int>
    </updateLog>

    <autoCommit>
      <maxTime>${solr.autoCommit.maxTime:15000}</maxTime>
      <openSearcher>false</openSearcher>
    </autoCommit>

    <autoSoftCommit>
      <maxTime>${solr.autoSoftCommit.maxTime:1000}</maxTime>
    </autoSoftCommit>
  </updateHandler>

  <!-- ==================== QUERY CONFIG ==================== -->
  <query>
    <maxBooleanClauses>${solr.max.booleanClauses:1024}</maxBooleanClauses>
    <filterCache class="solr.FastLRUCache"
                 size="512"
                 initialSize="512"
                 autowarmCount="0"/>

    <queryResultCache class="solr.LRUCache"
                      size="512"
                      initialSize="512"
                      autowarmCount="0"/>

    <documentCache class="solr.LRUCache"
                   size="512"
                   initialSize="512"
                   autowarmCount="0"/>

    <cache name="perSegFilter"
           class="solr.search.LRUCache"
           size="10"
           initialSize="0"
           autowarmCount="10"
           regenerator="solr.NoOpRegenerator" />

    <enableLazyFieldLoading>true</enableLazyFieldLoading>
    <useFilterForSortedQuery>true</useFilterForSortedQuery>
    <queryResultWindowSize>20</queryResultWindowSize>
    <queryResultMaxDocsCached>200</queryResultMaxDocsCached>

    <listener event="newSearcher" class="solr.QuerySenderListener">
      <arr name="queries">
        <!-- Warmup-Queries für bessere Performance -->
        <lst><str name="q">*:*</str><str name="sort">decision_date desc</str><str name="rows">10</str></lst>
        <lst><str name="q">court:BGH</str><str name="sort">decision_date desc</str><str name="rows">10</str></lst>
      </arr>
    </listener>

    <listener event="firstSearcher" class="solr.QuerySenderListener">
      <arr name="queries">
        <lst><str name="q">*:*</str><str name="sort">decision_date desc</str><str name="rows">1</str></lst>
      </arr>
    </listener>

    <useColdSearcher>false</useColdSearcher>
  </query>

  <!-- ==================== REQUEST DISPATCHER ==================== -->
  <requestDispatcher>
    <httpCaching never304="true" />
  </requestDispatcher>

  <!-- ==================== REQUEST HANDLERS ==================== -->
  
  <!-- Standard Search Handler -->
  <requestHandler name="/select" class="solr.SearchHandler">
    <lst name="defaults">
      <str name="echoParams">explicit</str>
      <int name="rows">10</int>
      <!-- Standard-Suchfelder für Rechtsdokumente -->
      <str name="df">text</str>
      <str name="defType">edismax</str>
      <str name="qf">
        title^3.0 
        summary^2.0 
        leitsatz^2.5
        tenor^2.0
        text^1.0
        case_number^4.0
        ecli_identifier^4.0
        normen^2.0
      </str>
      <str name="pf">
        title^3.0
        summary^2.0
        leitsatz^2.5
      </str>
      <!-- Faceting für juristische Kategorien -->
      <str name="facet">true</str>
      <str name="facet.field">court</str>
      <str name="facet.field">document_type</str>
      <str name="facet.field">year</str>
      <str name="facet.field">senat</str>
      <int name="facet.mincount">1</int>
      <!-- Highlighting für Suchergebnisse -->
      <str name="hl">true</str>
      <str name="hl.fl">title,summary,leitsatz,tenor,text</str>
      <int name="hl.snippets">3</int>
      <int name="hl.fragsize">250</int>
      <str name="hl.simple.pre">&lt;mark&gt;</str>
      <str name="hl.simple.post">&lt;/mark&gt;</str>
    </lst>
  </requestHandler>

  <!-- Rechtsdokument-spezifischer Handler -->
  <requestHandler name="/legal" class="solr.SearchHandler">
    <lst name="defaults">
      <str name="echoParams">explicit</str>
      <int name="rows">20</int>
      <str name="df">text</str>
      <str name="defType">edismax</str>
      <!-- Erweiterte Suchfelder -->
      <str name="qf">
        title^4.0 
        case_number^5.0
        ecli_identifier^5.0
        leitsatz^3.0
        tenor^2.5
        summary^2.0 
        normen^3.0
        text^1.0
        richter^1.5
      </str>
      <str name="pf">title^4.0 case_number^5.0</str>
      <str name="pf2">title^2.0 summary^1.5</str>
      <str name="pf3">title^1.5 summary^1.0</str>
      <!-- Boost für neuere Entscheidungen -->
      <str name="bf">recip(ms(NOW,decision_date),3.16e-11,1,1)</str>
      <str name="facet">true</str>
      <str name="facet.field">court</str>
      <str name="facet.field">document_type</str>
      <str name="facet.field">year</str>
      <str name="facet.range">decision_date</str>
      <str name="facet.range.start">2020-01-01T00:00:00Z</str>
      <str name="facet.range.end">NOW</str>
      <str name="facet.range.gap">+1YEAR</str>
      <!-- Standard Sortierung: Relevanz, dann Datum -->
      <str name="sort">score desc, decision_date desc</str>
    </lst>
  </requestHandler>

  <!-- Suggest Handler für Autocomplete -->
  <requestHandler name="/suggest" class="solr.SearchHandler" startup="lazy">
    <lst name="defaults">
      <str name="suggest">true</str>
      <str name="suggest.count">10</str>
      <str name="suggest.dictionary">mySuggester</str>
      <str name="suggest.onlyMorePopular">true</str>
      <str name="suggest.cfq">court:BGH OR court:BVerfG OR court:BAG OR court:BSG OR court:BVerwG OR court:BFH</str>
    </lst>
    <arr name="components">
      <str>suggest</str>
    </arr>
  </requestHandler>

  <!-- More Like This Handler -->
  <requestHandler name="/mlt" class="solr.MoreLikeThisHandler">
    <lst name="defaults">
      <str name="mlt.fl">title,summary,leitsatz,normen</str>
      <int name="mlt.mindf">1</int>
      <int name="mlt.mintf">2</int>
      <str name="mlt.qf">title^2.0 summary^1.5 leitsatz^2.0 normen^1.5</str>
      <int name="rows">10</int>
    </lst>
  </requestHandler>

  <!-- Update Handler -->
  <requestHandler name="/update" class="solr.UpdateRequestHandler" />

  <!-- Admin Handlers -->
  <requestHandler name="/admin/ping" class="solr.PingRequestHandler">
    <lst name="invariants">
      <str name="q">*:*</str>
    </lst>
    <lst name="defaults">
      <str name="echoParams">all</str>
    </lst>
  </requestHandler>

  <requestHandler name="/debug/dump" class="solr.DumpRequestHandler">
    <lst name="defaults">
      <str name="echoParams">explicit</str>
      <str name="echoHandler">true</str>
    </lst>
  </requestHandler>

  <!-- ==================== SEARCH COMPONENTS ==================== -->
  
  <!-- Suggest Component -->
  <searchComponent name="suggest" class="solr.SuggestComponent">
    <lst name="suggester">
      <str name="name">mySuggester</str>
      <str name="lookupImpl">AnalyzingInfixLookupFactory</str>
      <str name="dictionaryImpl">DocumentDictionaryFactory</str>
      <str name="field">suggest</str>
      <str name="weightField">score</str>
      <str name="suggestAnalyzerFieldType">text_general</str>
      <str name="buildOnStartup">false</str>
      <str name="buildOnCommit">false</str>
    </lst>
  </searchComponent>

  <!-- ==================== RESPONSE WRITERS ==================== -->
  <queryResponseWriter name="json" class="solr.JSONResponseWriter">
    <str name="content-type">application/json; charset=UTF-8</str>
  </queryResponseWriter>

  <queryResponseWriter name="xml" class="solr.XMLResponseWriter" />

</config>